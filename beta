          { "id": 105, "fabricante": "Top Ultra", "classe": "Adjuvante", "produto": "TOP FIX", "principio_ativo": "Oleo mineral" },
          { "id": 106, "fabricante": "Quimifol", "classe": "Adjuvante", "produto": "QUIMIFOL PHFOS", "principio_ativo": "Redutor de pH" },
          { "id": 107, "fabricante": "Baic", "classe": "Adjuvante", "produto": "FIXATIVO", "principio_ativo": "Adjuvante neutro" },
          { "id": 108, "fabricante": "Tide", "classe": "Adjuvante", "produto": "NEXO", "principio_ativo": "Oleo de Laranja" },
          { "id": 109, "fabricante": "Sipcam", "classe": "Foliar", "produto": "STILO VERDE", "principio_ativo": "Aminoacido" },
          { "id": 110, "fabricante": "Sipcam", "classe": "Foliar", "produto": "ABYSS", "principio_ativo": "E.algas A.Nodosum" },
          { "id": 111, "fabricante": "Baic", "classe": "Foliar", "produto": "NUTRAN", "principio_ativo": "Macro e micro + aminoacidos" },
          { "id": 112, "fabricante": "Tide", "classe": "Foliar", "produto": "NUTRI POWER N", "principio_ativo": "Nitrogenio" },
          { "id": 113, "fabricante": "Baic", "classe": "Nematicida", "produto": "TOID", "principio_ativo": "Nematicida" },
        ];

        document.addEventListener('DOMContentLoaded', () => {
            const activesGrid = document.getElementById('actives-grid');
            const categoryFilter = document.getElementById('category-filter');
            const manufacturerFilter = document.getElementById('manufacturer-filter');
            const activeIngredientFilter = document.getElementById('active-ingredient-filter');
            const searchInput = document.getElementById('search-input');
            const resetFiltersBtn = document.getElementById('reset-filters-btn');
            const noResultsDiv = document.getElementById('no-results');
            const homeView = document.getElementById('home-view');
            const activesView = document.getElementById('actives-view');
            
            const categories = [...new Set(products.map(p => p.classe))].sort();
            const manufacturers = [...new Set(products.map(p => p.fabricante))].sort();
            const activeIngredients = [...new Set(products.map(p => p.principio_ativo))].sort();

            const categoryIcons = {
                'Herbicida': 'fa-plant-wilt', 'Inseticida': 'fa-bug', 'Fungicida': 'fa-bacteria',
                'Biológico': 'fa-dna', 'TS': 'fa-seedling', 'Adjuvante': 'fa-flask-vial',
                'Foliar': 'fa-leaf', 'Nematicida': 'fa-worm'
            };

            function populateFilters() {
                const populateSelect = (selectEl, options, defaultLabel) => {
                    selectEl.innerHTML = `<option value="">${defaultLabel}</option>`;
                    options.forEach(opt => {
                        const option = document.createElement('option');
                        option.value = opt;
                        option.textContent = opt;
                        selectEl.appendChild(option);
                    });
                };
                populateSelect(categoryFilter, categories, "Todas as Categorias");
                populateSelect(manufacturerFilter, manufacturers, "Todos os Fabricantes");
                populateSelect(activeIngredientFilter, activeIngredients, "Todos os Ativos");
            }

            function renderActives(activesToRender) {
                activesGrid.innerHTML = '';
                noResultsDiv.classList.toggle('hidden', activesToRender.length > 0);
                activesGrid.classList.toggle('hidden', activesToRender.length === 0);
                
                activesToRender.forEach(active => {
                    const card = document.createElement('div');
                    card.className = 'card bg-white rounded-lg shadow-md p-4 flex flex-col h-full justify-center items-center text-center cursor-pointer';
                    card.innerHTML = `<h3 class="text-md font-bold text-primary-blue">${active}</h3>`;
                    card.onclick = () => openModalForActive(active);
                    activesGrid.appendChild(card);
                });
            }

            function applyFilters() {
                const category = categoryFilter.value;
                const manufacturer = manufacturerFilter.value;
                const activeIngredient = activeIngredientFilter.value;
                const searchTerm = searchInput.value.toLowerCase();

                let filteredProducts = products.filter(p => 
                    (!category || p.classe === category) &&
                    (!manufacturer || p.fabricante === manufacturer) &&
                    (!activeIngredient || p.principio_ativo === activeIngredient) &&
                    (!searchTerm || p.produto.toLowerCase().includes(searchTerm) || p.principio_ativo.toLowerCase().includes(searchTerm))
                );
                
                const uniqueActives = [...new Set(filteredProducts.map(p => p.principio_ativo))].sort();
                
                renderActives(uniqueActives);
                document.getElementById('actives-title').textContent = category ? `Princípios Ativos: ${category}` : 'Todos os Princípios Ativos';
            }

            function showView(viewId) {
                homeView.classList.add('hidden');
                activesView.classList.add('hidden');
                document.getElementById(viewId).classList.remove('hidden');
            }
            
            function renderCategoryCards() {
                const container = document.querySelector('#home-view .grid');
                container.innerHTML = '';
                categories.forEach(cat => {
                    const card = document.createElement('div');
                    card.className = 'category-card bg-white p-6 rounded-lg shadow-md text-center cursor-pointer transition-transform transform hover:scale-105';
                    card.dataset.category = cat;
                    card.innerHTML = `
                        <i class="fas ${categoryIcons[cat] || 'fa-tag'} text-4xl text-primary-blue mb-4"></i>
                        <h3 class="text-xl font-bold" style="color: var(--jecal-dark-gray);">${cat}</h3>
                    `;
                    card.addEventListener('click', () => {
                        showView('actives-view');
                        categoryFilter.value = cat;
                        applyFilters();
                        window.scrollTo(0, 0);
                    });
                    container.appendChild(card);
                });
            }

            [categoryFilter, manufacturerFilter, activeIngredientFilter].forEach(el => el.addEventListener('change', applyFilters));
            searchInput.addEventListener('input', applyFilters);
            
            resetFiltersBtn.addEventListener('click', () => {
                categoryFilter.value = '';
                manufacturerFilter.value = '';
                activeIngredientFilter.value = '';
                searchInput.value = '';
                applyFilters();
            });
            
            document.querySelectorAll('#nav-home, #mobile-nav-home').forEach(el => el.addEventListener('click', (e) => {
                e.preventDefault();
                showView('home-view');
                if (!document.getElementById('mobile-menu').classList.contains('hidden')) {
                    document.getElementById('mobile-menu').classList.add('hidden');
                }
            }));

            document.querySelectorAll('#nav-produtos, #mobile-nav-produtos, #explore-btn').forEach(el => el.addEventListener('click', (e) => {
                e.preventDefault();
                showView('actives-view');
                resetFiltersBtn.click();
                window.scrollTo(0, 0);
                if (!document.getElementById('mobile-menu').classList.contains('hidden')) {
                    document.getElementById('mobile-menu').classList.add('hidden');
                }
            }));

            document.getElementById('mobile-menu-button').addEventListener('click', () => {
                document.getElementById('mobile-menu').classList.toggle('hidden');
            });

            populateFilters();
            applyFilters();
            renderCategoryCards();
        });

        function openModalForActive(activeIngredient) {
            const category = document.getElementById('category-filter').value;
            const manufacturer = document.getElementById('manufacturer-filter').value;

            const matchingProducts = products.filter(p =>
                p.principio_ativo === activeIngredient &&
                (!category || p.classe === category) &&
                (!manufacturer || p.fabricante === manufacturer)
            ).sort((a,b) => a.produto.localeCompare(b.produto));

            if (matchingProducts.length === 0) return;

            const modal = document.getElementById('product-modal');
            const modalContent = document.getElementById('modal-content');
            
            let productsHtml = matchingProducts.map(product => `
                <div class="border-b last:border-b-0 py-3 flex justify-between items-center">
                    <div>
                        <p class="font-bold text-gray-800">${product.produto}</p>
                        <p class="text-sm text-gray-500">${product.fabricante}</p>
                    </div>
                    <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded">${product.classe}</span>
                </div>
            `).join('');

            modalContent.innerHTML = `
                <h2 class="text-xl font-bold text-primary-blue mb-2">Princípio Ativo</h2>
                <p class="text-2xl font-semibold text-gray-800 mb-6">${activeIngredient}</p>
                <h3 class="font-bold text-lg mb-2 border-t pt-4">Produtos Disponíveis:</h3>
                <div>
                    ${productsHtml}
                </div>
            `;
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeModal(event) {
            if (event.target.id === 'product-modal' || event.target.closest('button')) {
                document.getElementById('product-modal').classList.add('hidden');
                document.body.style.overflow = 'auto';
            }
        }
    </script>
</body>
</html>


